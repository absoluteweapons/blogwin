        <!-- label -->
        <div data-dark-label="data-dark-label" class="mr-2">
          Dark Mode
        </div>
        <!-- toggle -->
        <div class="relative">
          <!-- input -->
          <input type="checkbox" data-dark-input="data-dark-input" id="darkMode" class="sr-only peer">
          <!-- line -->
          <div class="bg-gray-600 w-14 h-8 rounded-full shadow-inner flex justify-around">
